<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="2dip"
    android:layout_marginBottom="2dip"
    card_view:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="4dp"
        tools:layout_editor_absoluteX="3dp">

        <TextView
            android:id="@+id/rankPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="NAME"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/rankPlayerPic"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/rankPlayerRank"
            android:layout_width="45dp"
            android:layout_height="41dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:text="Rank"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/rankPlayerPic"
            card_view:layout_constraintTop_toBottomOf="@+id/rankPlayerName" />

        <TextView
            android:id="@+id/rankCurrentStar"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/staricon"
            android:backgroundTint="@color/dark_star"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="00"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/star_score"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/rankPlayerName"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rankPlayerPic"
            android:layout_width="64dp"
            android:layout_height="58dp"
            card_view:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/rankNumber"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/rankNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="50dp"
            card_view:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>