<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.firedroid.firedroid.ChooseYourLevel">

    <Button
        android:id="@+id/firebaseCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firebase"
        android:onClick="firebaseCat"/>
    <Button
        android:id="@+id/androidCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android"
        android:onClick="androidCat"/>
    <Button
        android:id="@+id/iosCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IOS"
        android:onClick="iosCat"/>
</LinearLayout>
